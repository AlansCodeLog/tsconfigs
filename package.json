{
	"name": "@alanscodelog/tsconfigs",
	"version": "6.0.1",
	"description": "My typescript configs.",
	"type": "module",
	"module": "tsconfig.json",
	"exports": {
		".": "./tsconfig.json"
	},
	"scripts": {
		"lint:commits": "commitlint --from $(git rev-list --max-parents=0 HEAD) --to HEAD --verbose",
		"postinstall": "node postinstall.js",
		"prepare": "husky"
	},
	"devDependencies": {
		"@alanscodelog/commitlint-config": "^3.0.2",
		"@alanscodelog/semantic-release-config": "^5.0.4",
		"commitlint": "^19.5.0",
		"husky": "9.1.6",
		"semantic-release": "^24.1.2"
	},
	"author": "Alan <alanscodelog@gmail.com>",
	"repository": "https://github.com/alanscodelog/tsconfigs",
	"license": "MIT",
	"files": [
		"README.md",
		"tsconfig.json",
		"postinstall.js",
		"install.sh",
		"copy"
	],
	"release": {
		"extends": [
			"@alanscodelog/semantic-release-config"
		]
	},
	"commitlint": {
		"extends": [
			"@alanscodelog"
		]
	},
	"engines": {
		"node": ">=20.0.0"
	},
	"@comments": {
		"scripts": {
			"lint:commits": "Lints all unpushed commits in the active branch."
		}
	},
	"publishConfig": {
		"access": "public"
	}
}
